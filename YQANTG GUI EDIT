--// üì¶ Services
local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local SoundService = game:GetService("SoundService")

local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

--// üîä √Çm thanh g√µ ph√≠m
local typeSound = Instance.new("Sound")
typeSound.SoundId = "rbxassetid://4724430129" -- ID b·∫°n cung c·∫•p
typeSound.Volume = 0.5
typeSound.Parent = SoundService

--// üñºÔ∏è T·∫°o GUI
local screenGui = Instance.new("ScreenGui", playerGui)
screenGui.ResetOnSpawn = false
screenGui.Name = "NoticeGui"

-- Frame ch√≠nh
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 450, 0, 250)
frame.Position = UDim2.new(0.5, 0, 0.5, 0)
frame.AnchorPoint = Vector2.new(0.5, 0.5)
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
frame.BackgroundTransparency = 1
frame.ClipsDescendants = true
frame.Parent = screenGui

-- Vi·ªÅn xanh l·ª•c s√°ng nh·∫π
local stroke = Instance.new("UIStroke", frame)
stroke.Thickness = 3
stroke.Color = Color3.fromRGB(0, 255, 0)
stroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border
task.spawn(function()
	while frame.Parent do
		stroke.Transparency = math.abs(math.sin(tick() * 2)) * 0.4
		task.wait(0.05)
	end
end)

-- Bo g√≥c
local corner = Instance.new("UICorner", frame)
corner.CornerRadius = UDim.new(0, 16)

-- TextLabel ch·∫°y t·ª´ng ch·ªØ
local textLabel = Instance.new("TextLabel", frame)
textLabel.Size = UDim2.new(1, -20, 0, 120)
textLabel.Position = UDim2.new(0, 10, 0, 10)
textLabel.BackgroundTransparency = 1
textLabel.Font = Enum.Font.SourceSansItalic
textLabel.TextScaled = true
textLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
textLabel.TextXAlignment = Enum.TextXAlignment.Left
textLabel.TextYAlignment = Enum.TextYAlignment.Top
textLabel.Text = ""
textLabel.RichText = true

-- Gradient m√†u
local uiGradient = Instance.new("UIGradient")
uiGradient.Color = ColorSequence.new{
	ColorSequenceKeypoint.new(0, Color3.fromRGB(255, 0, 128)),
	ColorSequenceKeypoint.new(0.5, Color3.fromRGB(0, 170, 255)),
	ColorSequenceKeypoint.new(1, Color3.fromRGB(0, 255, 128))
}
uiGradient.Rotation = 45
uiGradient.Parent = textLabel

-- N√∫t X
local closeBtn = Instance.new("TextButton", frame)
closeBtn.Size = UDim2.new(0, 30, 0, 30)
closeBtn.Position = UDim2.new(1, -35, 0, 5)
closeBtn.Text = "X"
closeBtn.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
closeBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
closeBtn.Visible = false
Instance.new("UICorner", closeBtn).CornerRadius = UDim.new(0, 8)

-- N√∫t Youtube
local ytBtn = Instance.new("TextButton", frame)
ytBtn.Size = UDim2.new(0.45, 0, 0, 30)
ytBtn.Position = UDim2.new(0.05, 0, 1, -40)
ytBtn.Text = "Youtube"
ytBtn.BackgroundColor3 = Color3.fromRGB(255, 0, 128)
ytBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
ytBtn.Visible = false
Instance.new("UICorner", ytBtn).CornerRadius = UDim.new(0, 8)
local ytStroke = Instance.new("UIStroke", ytBtn)
ytStroke.Thickness = 2
ytStroke.Color = Color3.fromRGB(0, 255, 0)

-- N√∫t Discord
local dcBtn = Instance.new("TextButton", frame)
dcBtn.Size = UDim2.new(0.45, 0, 0, 30)
dcBtn.Position = UDim2.new(0.5, 0, 1, -40)
dcBtn.Text = "Discord"
dcBtn.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
dcBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
dcBtn.Visible = false
Instance.new("UICorner", dcBtn).CornerRadius = UDim.new(0, 8)
local dcStroke = Instance.new("UIStroke", dcBtn)
dcStroke.Thickness = 2
dcStroke.Color = Color3.fromRGB(0, 255, 0)

-- üåü Tween hi·ªán GUI + l·∫Øc nh·∫π
TweenService:Create(frame, TweenInfo.new(0.5, Enum.EasingStyle.Back), {
	BackgroundTransparency = 0
}):Play()

task.spawn(function()
	local originalPos = frame.Position
	for i = 1, 6 do
		frame.Position = originalPos + UDim2.new(0, math.random(-3, 3), 0, math.random(-3, 3))
		task.wait(0.03)
	end
	frame.Position = originalPos
end)

-- ‚ú® G√µ t·ª´ng ch·ªØ + ph√°t √¢m thanh
local fullText = "Notice YQANTG Gui is now closed for some reasons, I hope everyone understands, I will try to update the latest version..."
task.spawn(function()
	for i = 1, #fullText do
		textLabel.Text = "<i>" .. string.sub(fullText, 1, i) .. "</i>"
		typeSound:Play()
		task.wait(0.07)
	end
	closeBtn.Visible = true
	ytBtn.Visible = true
	dcBtn.Visible = true
end)

-- üìã Copy link
local function copyToClipboard(text)
	if setclipboard then
		setclipboard(text)
	elseif Clipboard then
		Clipboard.set(text)
	end
end

ytBtn.MouseButton1Click:Connect(function()
	copyToClipboard("https://youtube.com/@yqantg?si=5JYRkAadht2L2nbJ")
end)

dcBtn.MouseButton1Click:Connect(function()
	copyToClipboard("https://discord.gg/qn5mnrzK")
end)

-- ‚ùå ƒê√≥ng
closeBtn.MouseButton1Click:Connect(function()
	TweenService:Create(frame, TweenInfo.new(0.4), {
		BackgroundTransparency = 1
	}):Play()
	textLabel.Text = ""
	closeBtn.Visible = false
	task.wait(0.4)
	screenGui:Destroy()
end)
